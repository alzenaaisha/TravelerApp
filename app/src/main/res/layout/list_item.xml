<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor= "@color/colorPrimary"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    android:layout_margin="@dimen/layout_margin_pariwisata">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gambar_wisata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/nama_wisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gambar_wisata"
            android:padding="@dimen/layout_margin_pariwisata"
            android:textColor="@color/colorTextDefault"
            android:textSize="@dimen/sub_judul"
            tools:text="{nama wisata)" />

    </RelativeLayout>
</android.support.v7.widget.CardView>